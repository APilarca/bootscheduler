 <% if @feedback.errors.any? %>
  <div id="error_explanation">
   <div class="alert alert-error">
    The form contains <%= pluralize(@feedback.errors.count, "error") %>.
   </div>
   <ul>
    <% @feedback.errors.full_messages.each do |msg| %>
     <li>* <%= msg %></li>
    <% end %>
   </ul>
  </div>
 <% end %>

<%= form_for :feedback, url: boot_feedback_path(@feedback), method: :patch do |f| %>

    <%= f.radio_button :rating, 1 %>
    <%= f.label :rating, 1 %>
    <br>
    <%= f.radio_button :rating, 2 %>
    <%= f.label :rating, 2 %>
    <br>
    <%= f.radio_button :rating, 3 %>
    <%= f.label :rating, 3 %>
    <br>
    <%= f.radio_button :rating, 4 %>
    <%= f.label :rating, 4 %>
    <br>
    <%= f.radio_button :rating, 5 %>
    <%= f.label :rating, 5 %>
    <br>
    <br>
    <%= f.label :comment %>:
    <%= f.text_area :comment %>
    <br>
    <br>
    <p>Was the feedback Actionable, Specific, and Kind?</p>
    <%= f.radio_button :ask?, true %>
    <%= f.label :rating, "Yes"%>
    <%= f.radio_button :ask?, false %>
    <%= f.label :rating, "No"%>
    <br>
    <br>
    <%= f.submit %>
<% end %>