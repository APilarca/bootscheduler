	<h1>Sign Up</h1>

<div class="error_message">
<%= render 'partials/error_messages', active_object: @boot %>
</div>

<%= form_for @boot do |f| %>

	<p>
		<%= f.label :first_name %><br>
		<%= f.text_field :first_name %>
	</p>
	
	<p>
		<%= f.label :last_name %><br>
		<%= f.text_field :last_name %>
	</p>

	<p>
		<%= f.label :email %><br>
		<%= f.text_field :email %>
	</p>
	
	<p>
		<%= f.label :phone %><br>
		<%= f.text_field :phone %>
	</p>

	<p>
		<%= f.label :password %><br>
		<%= f.password_field :password %>
	</p>


	<p>
		<%= f.label :student? %><br>
		<%= f.check_box :role %>
	</p>

	<p>
		<%= f.submit 'Create Account' %>
	</p>

<% end %>
